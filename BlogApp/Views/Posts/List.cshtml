@model List<Post>

@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12">
        <h2>Post Listesi</h2>
        <a href="/posts/create" class="btn btn-primary">Post Ekle</a>
        <table class="table table-bordered mt-3">
            <thead>
                <tr>
                    <th style="width:200px;">Image</th>
                    <th>Title</th>
                    <th>Is Active</th>
                    <th style="width:125px;"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td><img src="/img/@item.Image" class="img-fluid" /></td>
                    <td>@item.Title</td>
                    <td>@item.IsActive</td>
                    <td>
                        <a href="/posts/edit/@item.PostID" class="btn btn-sm btn-primary">Edit</a>
                        <a href="/posts/delete/@item.PostID" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
